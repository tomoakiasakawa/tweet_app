 <% provide(:title, @user.name) %>
 <div class="row">
   <aside class="col-md-4">
     <section class="user_info">
       <h2><%= @user.name %></h2>
       <% if current_user?(@user) %>
        <p><%= link_to('プロフィール編集',edit_user_path(@user)) %></p>
        <p><%= link_to('退会', @user, method: :delete, data:{confirm: "よろしいですか？" }) %></p>
        <% end %>
     </section>
   </aside>
   <div class="col-md-8">
     <% if @user.tweets.any? %>
     <h2>tweets (<%= @user.tweets.count %>)</h2>
      <ol class="tweets">
        <%= render @tweets %>
      </ol>
      <%= will_paginate @tweets %>
      <% end %>
    </div>
 </div>
